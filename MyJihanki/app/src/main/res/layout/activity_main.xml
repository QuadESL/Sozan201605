<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.co.oec_o.oec0155.myjihanki.MainActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="6">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/syasin1"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/cocacola500mlpet"
                    android:layout_weight="7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="100"
                    android:id="@+id/kakaku1"
                    android:layout_weight="1"
                    android:background="@color/highlighted_text_material_light"
                    android:gravity="center" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="ジュース"
                    android:id="@+id/button1"
                    android:layout_weight="2"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:background="@color/colorAccent"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/syasin2"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="7"
                    android:src="@drawable/ayataka500ml" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="120"
                    android:id="@+id/kakaku2"
                    android:layout_weight="1"
                    android:background="@color/highlighted_text_material_light"
                    android:gravity="center" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="お茶"
                    android:id="@+id/button2"
                    android:layout_weight="2"
                    android:background="@color/colorAccent"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/syasin3"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="7"
                    android:src="@drawable/georgia190can" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="180"
                    android:id="@+id/kakaku3"
                    android:layout_weight="1"
                    android:background="@color/highlighted_text_material_light"
                    android:gravity="center" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="コーヒー"
                    android:id="@+id/button3"
                    android:layout_weight="2"
                    android:background="@color/colorAccent"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="4">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="取り出し口"
                    android:id="@+id/textView4"
                    android:layout_weight="2"
                    android:background="@android:color/holo_orange_light"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/toridasiguti"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="8"
                    android:background="@color/abc_input_method_navigation_guard" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="合計金額"
                    android:id="@+id/textView5"
                    android:background="@android:color/holo_orange_light"
                    android:layout_weight="2"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/goukeihyoji"
                    android:layout_weight="3"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@android:color/background_light"
                    android:layout_gravity="right"
                    android:gravity="end" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="おつり"
                    android:id="@+id/textView6"
                    android:background="@android:color/holo_orange_light"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/oturihyoji"
                    android:layout_weight="3"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@android:color/background_light"
                    android:layout_gravity="right"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="お金投入口"
                    android:id="@+id/textView7"
                    android:background="@android:color/holo_orange_light"
                    android:layout_weight="2"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/tonyuguti"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="8"
                    android:background="@color/abc_search_url_text_pressed" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/kouka500"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/s_500endama" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/kouka100"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/s_100endama" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/kouka10"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/s_10endama" />
    </LinearLayout>
</LinearLayout>
